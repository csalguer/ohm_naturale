<%- model_class = Blog -%>
<div class="page-header">
  <h1><%=t '.title', :default => Blog %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:pic_filename) %></th>
      <th><%= model_class.human_attribute_name(:pic_content_type) %></th>
      <th><%= model_class.human_attribute_name(:pic_file_size) %></th>
      <th><%= model_class.human_attribute_name(:pic_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.id %></td>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= blog.pic_filename %></td>
        <td><%= blog.pic_content_type %></td>
        <td><%= blog.pic_file_size %></td>
        <td><%= blog.pic_updated_at %></td>
        <td><%=l blog.created_at, format: :long %></td>
        <td>
          <%= link_to blog_path(blog), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to blog_path(blog), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_blog_path,
            :class => 'btn btn-primary' %>
